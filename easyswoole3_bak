## imagick ext
RUN wget http://pecl.php.net/get/imagick-3.4.4.tgz -O imagick.tar.gz \
   && mkdir -p imagick \
   && tar zxvf imagick.tar.gz -C imagick --strip-components=1 \
   && rm imagick.tar.gz \
   && ( \
   cd imagick \
   && phpize \
   && ./configure  \
   && make \
   && make install \
   ) \
   && echo 'extension=imagick.so' > /etc/php.d/20-imagick.ini \
   && rm -r imagick

WORKDIR /mnt/server/php
CMD ["tail", "-f", "/dev/null"]